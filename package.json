{
  "name": "card-creator-desktop",
  "version": "1.0.0",
  "description": "Card Creator Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "restart": "powershell -ExecutionPolicy Bypass -File restart-app.ps1",
    "build": "electron-builder",
    "build-installer": "electron-builder --win",
    "build-portable": "electron-builder --win portable",
    "dist": "npm run build && electron-builder --win --publish=never"
  },
  "build": {
    "appId": "com.cardcreator.desktop",
    "productName": "Card Creator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "node_modules/**/*",
      "!node_modules/electron/**/*"
    ],
    "win": {
      "target": "portable",
      "sign": false
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "exiftool-vendored": "^30.3.0",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "papaparse": "^5.5.3",
    "sharp": "^0.34.2",
    "xml2js": "^0.6.2"
  }
}
